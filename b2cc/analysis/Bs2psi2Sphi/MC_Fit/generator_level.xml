		</PhysicsParameter>

		<PhysicsParameter>
			<Name>timeResFraction</Name>
			#<Value>0.174</Value>
			<Value>0.180</Value> #MC2011
			#<Value>0.170</Value> #MC2012
			<Type>Fixed</Type>
			<Unit> </Unit>
		</PhysicsParameter>

               <PhysicsParameter>
                        <Name>timeResMu</Name>
                        <Value>-0.00333</Value>
                        <Type>Fixed</Type>
                </PhysicsParameter>

	</ParameterSet>


	//==========================================
	// Specify which minimiser to use.

	<Minimiser>
		<MinimiserName>Minuit</MinimiserName>
		<MaxSteps>100000</MaxSteps>
		<GradTolerance>0.01</GradTolerance>
		<Quality>0</Quality>
	</Minimiser>

	<FitFunction>
		<FunctionName>NegativeLogLikelihoodThreaded</FunctionName>
		<Threads>8</Threads>
		<SetIntegratorTest>True</SetIntegratorTest>
		<WeightName>weight</WeightName>
		<OffSetNLL>True</OffSetNLL>
	</FitFunction>

	<NumberRepeats>1</NumberRepeats>

	<CommonPDF>
		<PDF>
			<Name>Bs2JpsiPhi_Signal_v7</Name>
			<ConfigurationParameter>UseHelicityBasis:True</ConfigurationParameter>
                        <ConfigurationParameter>AngularAcceptanceIgnoreNumerator:True</ConfigurationParameter>			
			<ConfigurationParameter>UseTimeAcceptance:False</ConfigurationParameter>
			<ConfigurationParameter>UseEventResolution:False</ConfigurationParameter>
			<ConfigurationParameter>ResolutionModel:Phis2012ResolutionModel</ConfigurationParameter>
		</PDF>
	</CommonPDF>

	<CommonPhaseSpace>
		<PhaseSpaceBoundary>
			<Observable>
				<Name>time</Name>
				<Minimum>0.3</Minimum>
				<Maximum>14.0</Maximum>
				<Unit>ps</Unit>
			</Observable>
			<Observable>
				<Name>helcosthetaK</Name>
				<TF1>helcosthetaK</TF1>
				<Minimum>-1.0</Minimum>
				<Maximum>1.0</Maximum>
				<Unit> </Unit>
			</Observable>
			<Observable>
				<Name>helphi</Name>
				<Minimum>-3.1416</Minimum>
				<Maximum>3.1416</Maximum>
				<Unit>rad</Unit>
			</Observable>
			<Observable>
				<Name>helcosthetaL</Name>
				<Minimum>-1.0</Minimum>
				<Maximum>1.0</Maximum>
				<Unit> </Unit>
			</Observable>
			<Observable>
				<Name>tag</Name>
				<Value>0.</Value>
				<Unit> </Unit>
			</Observable>
			<Observable>
				<Name>mistag</Name>
				<Minimum>0.</Minimum>
				<Maximum>0.5</Maximum>
				<Unit> </Unit>
			</Observable>
			<Observable>
				<Name>eventResolution</Name>
				<Minimum>0.0</Minimum>
				<Maximum>0.12</Maximum>
				<Unit> </Unit>
			</Observable>
		</PhaseSpaceBoundary>
	</CommonPhaseSpace>

	<ToFit>
		<CommonPDF>True</CommonPDF>
		<DataSet>
			<Source>Foam</Source>
			<NumberEvents>1000000</NumberEvents>
			<CommonPhaseSpace>
			</CommonPhaseSpace>

		</DataSet>
	</ToFit>

</RapidFit>


