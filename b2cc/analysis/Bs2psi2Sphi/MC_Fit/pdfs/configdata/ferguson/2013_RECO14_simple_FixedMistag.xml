		<PhysicsParameter>
			<Name>lambda</Name>
			<Value>1.0</Value>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>


		//..................................
		// Detector Parameters

		// Mistag parameters
		<PhysicsParameter>
			<Name>timeResolutionScale</Name>
			#<Value>1.</Value>
			<Value>1.26195</Value>
			<Type>Fixed</Type>
