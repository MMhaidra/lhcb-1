		</PhysicsParameter>

		// Mistag calibration
		<PhysicsParameter>
			<Name>mistagP1_SS</Name>
			#<Value>0.</Value>
			<Value>0.976</Value>
			<Type>Fixed</Type>
			<Unit> </Unit>
		</PhysicsParameter>
		<PhysicsParameter>
			<Name>mistagP0_SS</Name>
			<Value>0.4449</Value>
